<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-extend="ReceiptScreenWidget">
        <t t-jquery=".button.print" t-operation="after">
            <div class="button email">
                <i class='fa fa-at'></i> Mail Receipt
            </div>
        </t>
    </t>

    <t t-name="SelectEmailPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-email">
                <p class="message"><t t-esc=" widget.message || 'Error' " /></p>

                <p class="comment"><t t-esc=" widget.comment || '' "/></p>
                <input style="position:absolute; bottom:80px; left:50px;" name='email' placeholder='Mail'></input>
                
                <div class="footer">
                    <div class="button confirm">
                        Confirm 
                    </div>
                    <div class="button cancel">
                        Cancel 
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
